<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Prompt:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <title>Tyre-Out</title>
</head>

<body>
    <div id="nav">
        <div id="nav-menu">
            <div id="fis">
                <p>Tyre-Out</p>
            </div>
            <div id="mid">
                <a href="#">หน้าหลัก</a>
                <p>|</p>
                <a href="#promotion">โปรโมชัน</a>
                <p>|</p>
                <a href="#branch">ศูนย์บริการ</a>
                <p>|</p>
                <a href="/appointment">การนัดหมาย</a>
                <p>|</p>
                <a href="/history">ประวัติการนัดหมาย</a>
            </div>
            <div id="las">
                <a href="#"><i class="fa-regular fa-user"></i></a>
            </div>
        </div>
    </div>
    <section id="main">
        <div id="check">
            <p>บริการเช็กระยะตามกำหนด</p>
            <div id="forsel">
                <select name="sel1" class="drop" id="sel1">
                    <option value="" selected>เลือกรุ่นรถยนต์</option>
                </select>
                <select name="sel2" class="drop" id="sel2">
                    <option value="" selected>เลือกรุ่นปี</option>
                </select>
                <select name="sel3" class="drop" id="sel3">
                    <option value="" selected>เลือกเกรด</option>
                </select>
                <select name="sel4" class="drop" id="sel4">
                    <option value="" selected>เลือกระยะทาง</option>
                </select>
                <button class="btn" id="btn-service">ค้นหา</button>
            </div>
        </div>
    </section>
    <section id="promotion">
        <h1>โปรโมชันที่น่าสนใจ</h1>
        <div id="container">


            <% promotions.forEach((element)=> { %>
                <div class="pic" style="background-image: url('<%=element.promotionPhotoURL%>');">
                    <div class="overlay">
                        <!-- <h3>
                            <%=element.promotionName%>
                        </h3> -->
                        <!-- <button class="btn-p" onclick="showpop()">แสดงรายละเอียด</button> -->
                        <button class="btn-p" onclick="showpop(<%= JSON.stringify(element) %>)">แสดงรายละเอียด</button>
                    </div>
                </div>
                <%});%>
                    <div id="popup-bg">
                        <div id="fori">
                            <i class="fa-solid fa-xmark" id="bac" onclick="bac()"></i>
                        </div>
                        <!-- * แชทให้เพิ่มมา ดูต่อพน -->
                        <div id="popup-content">

                        </div>
                    </div>
                    <div id="popup-ov" onclick="bac()"></div>
        </div>
    </section>
    <section id="branch">
        <h1>ศูนย์บริการ</h1>
        <div id="select-branch">
            <select name="branchvince" class="drop" id="branchvince">
                <option value="" selected>เลือกจังหวัด</option>
            </select>
            <select name="branch-district" class="drop" id="branch-district">
                <option value="" selected>เลือกอำเภอ/เขต</option>
            </select>
            <button class="btn" id="btn-branch">ค้นหา</button>
        </div>


        <% servicebranches.forEach((element)=> { %>

            <div id="branch-area">
                <!-- นี่คือ แสดงสาขา -->
                <div id="forimg" style="background-image: url('<%=element.branchPhotoURL%>');"></div>
                <div id="fortext">
                    <h3>
                        <%=element.centerName%>
                    </h3>
                    <p>
                        <%=element.address%>
                            <%=element.subdistrict%>
                                <%=element.district%>
                                    <%=element.province%>
                                        <%=element.postcode%>
                    </p>
                    <p>โทรศัพท์ <%=element.telephone%>
                    </p>
                    <p>เปิดให้บริการเวลา <%=element.openTime%> - <%=element.closedTime%>
                    </p>
                </div>
            </div>

            <% }); %>

    </section>

    <style>
        .popup-detail {
            max-width: 600px;
            background: white;
            padding: 20px;
            border-radius: 10px;
        }

        .popup-detail img {
            width: 100%;
            max-height: 300px;
            object-fit: cover;
            border-radius: 5px;
            margin: 10px 0;
        }

        .promo-code {
            color: #ff0000;
            font-weight: bold;
        }
    </style>

    <script>
        function bac() {
            document.getElementById("popup-bg").style.visibility = "hidden";
            document.getElementById("popup-ov").style.visibility = "hidden";
            document.getElementById("popup-bg").style.opacity = 0;
            document.getElementById("popup-ov").style.opacity = 0;
        }
        // function showpop() {
        //     document.getElementById("popup-bg").style.visibility = "visible";
        //     document.getElementById("popup-ov").style.visibility = "visible";
        //     document.getElementById("popup-bg").style.opacity = 1;
        //     document.getElementById("popup-ov").style.opacity = 1;
        // }

        function showpop(promotion) {
            console.log("popuppppppppppp");
            console.log(promotion.promotionId);

            const content = `<h3>${promotion.promotionName}</h3>
                            <p>${promotion.promotionDescription}</p>
                            <img class="pic" src="${promotion.promotionPhotoURL}" alt="${promotion.promotionName}">
                            `;

            // แทรกเนื้อหาและแสดง Popup
            document.getElementById("popup-content").innerHTML = content;
            document.getElementById("popup-bg").style.visibility = "visible";
            document.getElementById("popup-ov").style.visibility = "visible";
            document.getElementById("popup-bg").style.opacity = 1;
            document.getElementById("popup-ov").style.opacity = 1;
        }

    </script>
</body>

</html>